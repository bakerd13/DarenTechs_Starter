@model ApplicationRoleViewModel
@using DarenTechs.Web.Models

<form asp-action="AddEditApplicationRole" role="form">
    @{
        var heading = $"{(String.IsNullOrEmpty(Model.Id) ? "Add" : "Edit")} Application Role";
        <modal-header model-heading="@heading"></modal-header>
    }
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="form-group">
                <label asp-for="RoleName" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="RoleName" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="Description" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    @{
        var footer = new ModalFooter { };
        <modal-footer modal-footer-buttons="@footer"></modal-footer>
    }
</form>
